@SOURCE_CHECK_POWER
    ;体力越高减的越少
    IF BASE:TARGET:体力 >= (90*MAXBASE:TARGET:体力) / 100
        TIMES LOSEBASE:体力, 0.5
    ELSEIF BASE:TARGET:体力 >= (80*MAXBASE:TARGET:体力) / 100
        TIMES LOSEBASE:体力, 0.6
    ELSEIF BASE:TARGET:体力 >= (70*MAXBASE:TARGET:体力) / 100
        TIMES LOSEBASE:体力, 0.7
    ELSEIF BASE:TARGET:体力 >= (60*MAXBASE:TARGET:体力) / 100
        TIMES LOSEBASE:体力, 0.8
    ELSEIF BASE:TARGET:体力 >= (50*MAXBASE:TARGET:体力) / 100
        TIMES LOSEBASE:体力, 0.9
    ENDIF
    IF BASE:MASTER:体力 >= (90*MAXBASE:MASTER:体力) / 100
        TIMES DOWNBASE:体力, 0.5
    ELSEIF BASE:MASTER:体力 >= (80*MAXBASE:MASTER:体力) / 100
        TIMES DOWNBASE:体力, 0.6
    ELSEIF BASE:MASTER:体力 >= (70*MAXBASE:MASTER:体力) / 100
        TIMES DOWNBASE:体力, 0.7
    ELSEIF BASE:MASTER:体力 >= (60*MAXBASE:MASTER:体力) / 100
        TIMES DOWNBASE:体力, 0.8
    ELSEIF BASE:MASTER:体力 >= (50*MAXBASE:MASTER:体力) / 100
        TIMES DOWNBASE:体力, 0.9
    ENDIF