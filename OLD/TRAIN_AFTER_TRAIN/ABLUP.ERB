@SHOW_JUEL
    
@SHOW_ABLUP_SELECT
    CALL PRINT_SHOW_ABLUP_SELECT

@PRINT_SHOW_ABLUP_SELECT
    #DIM LCOUNT
    #DIM PCOUNT
    #DIM ITEMSELECTED
    #DIM MEMOLINE
    #DIM CCOUNT
    ITEMSELECTED = 0
    MEMOLINE = LINECOUNT
    $LOOP
    CUSTOMDRAWLINE -
    REDRAW
    CLEARLINE LINECOUNT - MEMOLINE
    PRINTBUTTON "[精神]   ", 901
    PRINTBUTTON "[感度]   ", 902
    PRINTBUTTON "[技巧]   ", 903
    PRINTL
    PRINTL
    PCOUNT = 0
    CCOUNT = 0
    IF FLAG:101 == 0
        FOR LCOUNT, 301, 305
            PRINTBUTTON @"[%TEXT_RJ(LCOUNT, 4)%] %TEXT_RJ(ABLNAME:LCOUNT, 8)%-LV%TEXT_RJ(ABL:LCOUNT, 2)% [%GET_LV(ABL:LCOUNT)%] ", LCOUNT
            TRYCALLFORM IS_ABLUP{LCOUNT}
            PRINTL
        NEXT
        FOR LCOUNT, 0, 10
            PRINTL
        NEXT
    ELSEIF FLAG:101 == 1
        FOR LCOUNT, 1, 11
            PRINTBUTTON @"[%TEXT_RJ(LCOUNT, 4)%] %TEXT_RJ(ABLNAME:LCOUNT, 8)%-LV%TEXT_RJ(ABL:LCOUNT, 2)% [%GET_LV(ABL:LCOUNT)%] ", LCOUNT
            TRYCALLFORM IS_ABLUP{LCOUNT}
            PRINTL
        NEXT
        FOR LCOUNT, 0, 4
            PRINTL
        NEXT
    ELSEIF FLAG:101 == 2
        FOR LCOUNT, 101, 114
            PRINTBUTTON @"[%TEXT_RJ(LCOUNT, 4)%] %TEXT_RJ(ABLNAME:LCOUNT, 8)%-LV%TEXT_RJ(ABL:LCOUNT, 2)% [%GET_LV(ABL:LCOUNT)%] ", LCOUNT
            TRYCALLFORM IS_ABLUP{LCOUNT}
            PRINTL
        NEXT
        FOR LCOUNT, 0, 1
            PRINTL
        NEXT
    ENDIF
    CUSTOMDRAWLINE -
    IF ITEMSELECTED == 0
        FOR LCOUNT, 0, 14
            PRINTL
        NEXT
    ELSE
        TRYCALLFORM ABLUP_COND{ITEMSELECTED}
    ENDIF
    PRINTL
    CUSTOMDRAWLINE -
    PRINTFORM [%TEXT_RJ(1000, 4)%] 自动升级(不获取特质) 
    PRINTFORML [%TEXT_RJ(999, 4)%] 升级完了
    PRINTL
    INPUT
    SELECTCASE RESULT
        CASE 901
            FLAG:101 = 0
            ITEMSELECTED = 0
            GOTO LOOP
        CASE 902
            FLAG:101 = 1
            ITEMSELECTED = 0
            GOTO LOOP
        CASE 903
            FLAG:101 = 2
            ITEMSELECTED = 0
            GOTO LOOP
        CASE 904
            FLAG:101 = 3
            ITEMSELECTED = 0
            GOTO LOOP
        CASE 905
            FLAG:101 = 4
            ITEMSELECTED = 0
            GOTO LOOP
        CASE 998
            TRYCALLFORM ABLUP{ITEMSELECTED}_CONFIRM
            GOTO LOOP
        CASE 999

        CASE 1000
            CALL AUTO_ABLUP_MAIN
            GOTO LOOP
        CASEELSE
            ITEMSELECTED = RESULT
            GOTO LOOP
    ENDSELECT





