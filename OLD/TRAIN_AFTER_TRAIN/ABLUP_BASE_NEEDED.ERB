@ABLUP_BASE_NEEDED(ARGS)
    #FUNCTION
    #DIM BASE_NEEDED
    SELECTCASE ARGS
        CASE "信赖"
            SELECTCASE ABL:TARGET:信赖
                CASE 1
                    BASE_NEEDED = 100
                CASE 2
                    BASE_NEEDED = 200
                CASE 3
                    BASE_NEEDED = 500
                CASE 4
                    BASE_NEEDED = 1000
                CASE IS > 4
                    BASE_NEEDED = (ABL:TARGET:信赖) * 1000
            ENDSELECT
        CASE "服从"
            SELECTCASE ABL:TARGET:服从
                CASE 1
                    BASE_NEEDED = 100
                CASE 2
                    BASE_NEEDED = 200
                CASE 3
                    BASE_NEEDED = 500
                CASE 4
                    BASE_NEEDED = 1000
                CASE IS > 4
                    BASE_NEEDED = (ABL:TARGET:服从) * 1000
            ENDSELECT
    ENDSELECT
    RETURNF BASE_NEEDED