@TRAIN_MOVEMENT_LIST
    #DIM LCOUNT
    #DIM LCOUNT2
    #DIM PCOUNT
    #DIM LOCATION
    #DIMS PART_A
    #DIMS PART_B

    ALIGNMENT LEFT
    PCOUNT = 0
    FOR LCOUNT, 0 ,CHARANUM
        IF CFLAG:LCOUNT:调教中 >= 1 && CFLAG:LCOUNT:所在处 == LOCATION
            FOR LCOUNT2, 301, 311
                IF CFLAG:LCOUNT:LCOUNT2 != 0
                    PART_A = %STRNAME:(LCOUNT2-300)%
                    PART_B = %STRNAME:(CFLAG:LCOUNT:(CFLAG:LCOUNT:(LCOUNT2+40)))%
                    PRINTFORM %NAME:LCOUNT%(%PART_A%) －　%NAME:(CFLAG:LCOUNT:(LCOUNT2+10))%(%PART_B%)
                    PCOUNT += 1
                    PRINTBUTTON "[✖]", PCOUNT
                    PRINTL
                ENDIF
            NEXT
        ENDIF
    NEXT
    PRINTL
    PRINTBUTTON "[清除全部]", 1000
    PRINTL

@TRAIN_MOVMENT_DELECT
    #DIM LCOUNT
    #DIM LCOUNT2
    #DIM PCOUNT
    #DIM LOCATION

    PCOUNT = 0
    IF RESULT == 1000
        FOR LCOUNT, 0, CHARANUM
            IF CFLAG:LCOUNT:调教中 >= 1 && CFLAG:LCOUNT:所在处 == LOCATION
                FOR LCOUNT2, 301, 311
                    CFLAG:LCOUNT:LCOUNT2 = 0
                    CFLAG:LCOUNT:(LCOUNT2 + 10) = 0
                    CFLAG:LCOUNT:(LCOUNT2 + 20) = 0
                    CFLAG:LCOUNT:(LCOUNT2 + 40) = 0
                NEXT
            ENDIF
        NEXT
    ELSE
        FOR LCOUNT, 0 ,CHARANUM
            IF CFLAG:LCOUNT:调教中 >= 1 && CFLAG:LCOUNT:所在处 == LOCATION
                FOR LCOUNT2, 301, 311
                    IF CFLAG:LCOUNT:LCOUNT2 != 0
                        PCOUNT += 1
                        IF PCOUNT == RESULT
                            CFLAG:LCOUNT:LCOUNT2 = 0
                            CFLAG:LCOUNT:(LCOUNT2 + 10) = 0
                            CFLAG:LCOUNT:(LCOUNT2 + 20) = 0
                            CFLAG:LCOUNT:(LCOUNT2 + 40) = 0
                        ENDIF
                    ENDIF
                NEXT
            ENDIF
        NEXT
    ENDIF
