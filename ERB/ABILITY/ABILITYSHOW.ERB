@ABILITY_SHOW, ARG
    #DIM ARG1
    CUSTOMDRAWLINE -
    PRINTFORML 姓名：%NAME:ARG%
    PRINTFORML 昵称：%CALLNAME:ARG%
    PRINTFORML 体力：{BASE:ARG:0} / {MAXBASE:ARG:0}
    PRINTFORML TP：{BASE:ARG:1} / {MAXBASE:ARG:1}
    IF ARG != MASTER
        PRINTFORML 好感: {BASE:ARG:5}
    ENDIF
    CUSTOMDRAWLINE -
    IF CFLAG:ARG:1 == 1
        PRINTL 性别：男
    ELSEIF CFLAG:ARG:1 == 2
        PRINTL 性别：女
    ELSEIF CFLAG:ARG:1 == 3
        PRINTL 性别：扶她
    ENDIF
    IF CFLAG:ARG:2 == 1
        PRINTL 种族：人类
    ELSEIF CFLAG:ARG:2 == 2
        PRINTL 种族：高等精灵
    ENDIF
    PRINTFORML 身高：{BASE:ARG:11}
    PRINTFORML 岁数：{BASE:ARG:15}
    CUSTOMDRAWLINE -
    PRINTL 特质
    FOR ARG1, 1, 200
        IF TALENT:ARG:ARG1 >= 1
            PRINTFORMLC [%TALENTNAME:ARG1%]
        ENDIF
    NEXT
    PRINTFORML [99] 返回
    INPUT
    IF RESULT == 99
        BEGIN SHOP
    ENDIF