@UPDATE_PRINT_PALAM(ARG)
    #DIM LCOUNT
    #DIM BAR_SIZE
    #DIM BAR_MAX
    #DIM BAR_COLOUR
    #DIM PALAM_MAX
    #DIM PCOUNT
    #DIM EX_LEVEL
    PCOUNT = 0
    BAR_SIZE = 5
    BAR_COLOUR = 0x6666FF
    PRINTL 【 快感 】
    FOR LCOUNT, 101, 111
        SELECTCASE PALAM:ARG:LCOUNT
            CASE IS >= 500000
                EX_LEVEL = 10
                PALAM_MAX = PALAM:ARG:LCOUNT + 1
            CASE IS >= 400000
                EX_LEVEL = 9
                PALAM_MAX = 500000
            CASE IS >= 300000
                EX_LEVEL = 8
                PALAM_MAX = 400000
            CASE IS >= 250000
                EX_LEVEL = 7
                PALAM_MAX = 300000
            CASE IS >= 200000
                EX_LEVEL = 6
                PALAM_MAX = 250000
            CASE IS >= 150000
                EX_LEVEL = 5
                PALAM_MAX = 200000
            CASE IS >= 100000
                EX_LEVEL = 4
                PALAM_MAX = 150000
            CASE IS >= 50000
                EX_LEVEL = 3
                PALAM_MAX = 100000
            CASE IS >= 20000
                EX_LEVEL = 2
                PALAM_MAX = 50000
            CASE IS >= 10000
                EX_LEVEL = 1
                PALAM_MAX = 20000
            CASE IS < 10000
                EX_LEVEL = 0
                PALAM_MAX = 10000
        ENDSELECT
        IF PALAMNAME:LCOUNT != ""
	        PRINTFORM %PALAMNAME:(LCOUNT)%LV:{EX_LEVEL}

	        CALL PRINT_BAR(PALAM:ARG:LCOUNT, PALAM_MAX, BAR_SIZE, BAR_COLOUR)
            PCOUNT += 1
            IF PCOUNT >= 3
                PRINTL
                PCOUNT = 0
            ENDIF
        ENDIF
    NEXT
    CALL PRINT_LINE(2)


