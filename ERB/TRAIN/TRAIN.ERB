

@TRAIN_MAIN
    #DIM MEMO_MASTER
    #DIM MEMO_TARGET

    MEMO_MASTER = MASTER
    MEMO_TARGET = TARGET
    FLAG:目标 = TARGET

    CALL TRAIN_FTF
    ;CALL LVUP

    MASTER = MEMO_MASTER
    TARGET = MEMO_TARGET


@TRAIN_FTF


    $TRAIN_LOOP
    CALL TRAIN_UI
    INPUT
    SELECTCASE RESULT
        CASE 3001
            CALL SOURCE_CHECK_MAIN
            GOTO TRAIN_LOOP
        CASE 3002
            IF FLAG:指令页面 != 4
                FLAG:上一页 = FLAG:指令页面
                FLAG:指令页面 = 4
            ELSE
                FLAG:指令页面 = FLAG:上一页
            ENDIF
            GOTO TRAIN_LOOP
        CASE 2000 TO 2100
            MASTER = RESULT - 2000
            GOTO TRAIN_LOOP
        CASEELSE
            SELECTCASE FLAG:指令页面
                CASE 0
                    SELECTCASE RESULT
                        CASE 1 TO 13
                            FLAG:指令页面 = 1
                            FLAG:自机部位 = RESULT
                    ENDSELECT
                CASE 1
                    SELECTCASE RESULT
                        CASE 99
                            FLAG:指令页面 = 3
                            FLAG:目标 = RESULT
                        CASE 9999
                            FLAG:指令页面 = 0
                        CASE 0 TO 99
                            FLAG:指令页面 = 2
                            FLAG:目标 = RESULT
                    ENDSELECT
                CASE 2
                    SELECTCASE RESULT
                        CASE 1 TO 10
                            FLAG:指令页面 = 3
                            FLAG:目标部位 = RESULT
                        CASE 9999
                            FLAG:指令页面 = 1
                    ENDSELECT
                CASE 3
                    SELECTCASE RESULT
                        CASE 9999
                            FLAG:指令页面 = 2
                        CASE 1 TO 2000
                            FLAG:指令选择 = RESULT
                            TRYCALLFORM COM_PRE_{RESULT}
                            CALL TRAIN_MOVEMENT
                    ENDSELECT
                CASE 4
                    CALL TRAIN_MOVMENT_DELECT
            ENDSELECT
            GOTO TRAIN_LOOP
    ENDSELECT
    

