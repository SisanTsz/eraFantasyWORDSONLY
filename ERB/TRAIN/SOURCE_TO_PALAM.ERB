@SOURCE_TO_PALAM
    #DIM LCOUNT
    #DIM NO_PALAM
    ;普通珠正常添加
    FOR LCOUNT, 20, 100
        PALAM:TARGET:LCOUNT += SOURCE:TARGET:LCOUNT
        PALAM:MASTER:LCOUNT += SOURCE:MASTER:LCOUNT
        SOURCE:TARGET:LCOUNT = 0
        SOURCE:MASTER:LCOUNT = 0
    NEXT
    ;快感珠先变成暂得快感,绝顶才变成普通快感珠
    FOR LCOUNT, 1, 10
        PALAM:TARGET:(LCOUNT + 100) += SOURCE:TARGET:LCOUNT
        PALAM:MASTER:(LCOUNT + 100) += SOURCE:MASTER:LCOUNT
        SOURCE:TARGET:LCOUNT = 0
        SOURCE:MASTER:LCOUNT = 0
    NEXT
    ;体力消耗
    BASE:MASTER:体力 -= SOURCE:MASTER:体力消耗 * 100
    SIF BASE:MASTER:体力 <= 0
        BASE:MASTER:体力 = 0
    SOURCE:MASTER:体力消耗 = 0
