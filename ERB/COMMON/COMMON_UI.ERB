

@PRINT_BAR(ARG:1, ARG:2, ARG:3, ARG:4);当前值，最大值，长度，颜色
	#DIM LCOUNT
	#DIM BAR_COLOR
	#DIM BG_COLOR
	#DIMS BAR_CHARA
	#DIMS INS_CHARA
	#DIMS FONT


	SIF ARG:1 < 0
		ARG:1 = 0
	SIF ARG:2 < 0
		ARG:2 = 0

	
	
	SETFONT "ＭＳ 哥特"


	PRINTPLAINFORM [

	BAR_CHARA = %UNICODE(0x2587)%
	;▆

	BAR_COLOR = ARG:4

	SETCOLOR BAR_COLOR

	INS_CHARA = ARG:3

	BG_COLOR = (MAX(30, (BAR_COLOR/65536)/5)*65536 + MAX(30, ((BAR_COLOR/256)%256)/5)*256 + MAX(30, (BAR_COLOR%256)/5) )

	FOR LCOUNT, 0, ARG:3
		SIF ((ARG:1 * ARG:3 + ARG:2 - 1) / ARG:2) <= LCOUNT
			SETCOLOR BG_COLOR
			PRINTPLAINFORM %BAR_CHARA%
	NEXT

	RESETCOLOR
	
	PRINTPLAINFORM ]
	SETFONT

