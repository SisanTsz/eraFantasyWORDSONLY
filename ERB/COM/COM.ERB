@COMABLE(ARG,ARG:1)
    #FUNCTION
    IF ABL:(FLAG:ARG):信赖 || ABL:(FLAG:ARG):欲望 || ABL:(FLAG:ARG):服从 || ABL:(FLAG:ARG):献身 >= ARG:1
        RETURNF 1
    ELSE
        RETURNF 0
    ENDIF


@MAX_RELATION(ARG)
    #FUNCTION
    #DIM MAX_LV = 0
    #DIM LCOUNT 
    FOR LCOUNT, 301, 305
        SIF ABL:ARG:LCOUNT > MAX_LV
            MAX_LV = ABL:ARG:LCOUNT
    NEXT
    RETURNF MAX_LV

@RESISTANCE(ARG)
    #FUNCTION
    #DIM RES = 10
    RES = 10 - MAX_RELATION(ARG)
    RETURNF RES