@NAME_FIRST_SETTING
    #DIMS NAME1
    #DIMS NAME2
    CLEARLINE LINECOUNT
    ALIGNMENT CENTER
    CUSTOMDRAWLINE -
    PRINTL
    PRINTFORML 你的名字？
    PRINTL
    PRINTBUTTON "[默认]",0
    PRINTBUTTON "[输入]",1
    INPUT
    IF RESULT == 0
        CALL SPECIES_FIRST_SETTING
    ENDIF
    INPUTS
    NAME1 = %RESULTS%
    PRINTL
    CUSTOMDRAWLINE -
    PRINTL
    PRINTFORML 你的昵称？
    PRINTL
    INPUTS
    NAME2 = %RESULTS%
    PRINTL
    CUSTOMDRAWLINE -
    PRINTL
    PRINTFORML 确认名字是%NAME1% 昵称是%NAME2%吗?
    PRINTBUTTON "[确认]",0
    PRINTBUTTON "[再输入]",1
    PRINTL
    PRINTL
    INPUT
    IF RESULT == 0
        NAME:1 = NAME1
        CALLNAME:1 = NAME2
        CALL SPECIES_FIRST_SETTING
    ELSEIF RESULT == 1
        RESTART
    ENDIF






